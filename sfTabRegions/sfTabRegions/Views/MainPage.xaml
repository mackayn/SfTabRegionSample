<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sfTabRegions.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button
            Text="Regions In Page" 
            HeightRequest="40"
            WidthRequest="200"
            Command="{Binding RegionInPageCommand}" />
        <Button
            Text="Regions In SfTab" 
            HeightRequest="40"
            WidthRequest="200"
            Command="{Binding RegionInTabCommand}" />

    </StackLayout>

</ContentPage>